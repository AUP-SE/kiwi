%h1 sm-liy
#block-login.block
  %h2 Sign in
  .content.login
    .flash
      - flash.each do |type, message|
        .message.notice
          %p
            = message
    = form_tag do
      %fieldset
        %legend Please Log In
        .group.wat-cf
          .left
            = label_tag :name, 'Name:'
          .right
            = text_field_tag :name, params[:name]
        .group.wat-cf
          .left= label_tag :password, 'Password:'
          .right= password_field_tag :password, params[:password]
        .group.wat-cf
          .right
            .button= submit_tag "Login"
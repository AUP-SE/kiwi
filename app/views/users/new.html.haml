%h1 Sign Up!
%h3
= form_tag '/users' do

  = label :user, :name, 'Name'
  = text_field :user, 'name'

  = label :user, :isProfessor, 'Are you a professor?'
  -# = select :user, 'isProfessor', ['Yes', 'No']
  = select(:user, :isProfessor, options_for_select([["Yes", true], ["No", false]]))

  
  = label :user, :email, 'Email'
  = text_field :user, 'email'
  
  = label :user, :password, 'Password'
  = password_field :user, 'password'
  
  = label :user, :passwordConfirm, 'Confirm Password'
  = password_field :user, 'passwordConfirm'
  
  = submit_tag 'Submit'
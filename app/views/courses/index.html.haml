%h1 All Courses

= link_to "create new Kiwi course", courses_create_path


%table#courses
  %thead
    %tr
      %th Course Title
      %th Code
      %th Professor
  %tbody
    - @courses.each do |course|
      %tr
        %td= link_to "#{course.title}", users_path(:course => { :c_id => course.id})
        %td= "#{course.coursecode}"
        %td= "#{course.professor}"
        
= link_to 'Add new course', new_course_path
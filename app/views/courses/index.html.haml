%h1 All Courses

= link_to "create new Kiwi course", courses_create_path


%table#courses
  %thead
    %tr
      %th Course Title
      %th Code
      %th Professor
  %tbody
    - @courses.each do |course|
      %tr
        %td= link_to course.title, "#{course.id}"
        %td= link_to course.coursecode, "#{course.coursecode}"
        %td= link_to course.professor, "#{course.coursecode}"
        
